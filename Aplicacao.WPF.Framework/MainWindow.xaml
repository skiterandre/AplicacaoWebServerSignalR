<Window x:Class="Aplicacao.WPF.Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplicacao.WPF.Framework"
        xmlns:views="clr-namespace:Aplicacao.WPF.Framework.Views"
        xmlns:vm="clr-namespace:Aplicacao.WPF.Framework.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <views:ImageSenderView Margin="10" DataContext="{Binding ImageSenderViewModel}" />
        </ScrollViewer>
    </Grid>
</Window>
